{{#section 'head'}}
    <link rel="stylesheet" href="/styles/add-topic.css"/>
{{/section}}
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">发布新话题</h3>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" method="post">
                        <div class="form-group">
                            <label for="topicCategory" class="col-sm-1 control-label">分类</label>
                            <div class="col-sm-11">
                                <select id="topicCategory" name="category" class="form-control">
                                    {{#each op}}
                                    <option value="{{@key}}">{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="topicTitle" class="col-sm-1 control-label">标题</label>
                            <div class="col-sm-11">
                                <input class="form-control" name="title" id="topicTitle" />
                            </div>
                        </div>
                        <div class="form-group textarea-wrapper">
                            <textarea class="form-control" name="content" rows="20" placeholder="请输入内容..."></textarea>
                        </div>
                        <div class="clearfix btn-wrapper">
                            <div class="pull-right">
                                <button class="btn btn-primary" type="submit">提交</button>
                                <button class="btn btn-default" type="reset">重置</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            {{> mod-introduction}}
        </div>
    </div>
</div>