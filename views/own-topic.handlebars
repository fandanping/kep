<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <ol class="breadcrumb">
                    <li><a href="/"><span class="glyphicon glyphicon-home"></span></a></li>
                    <li><a href="/user/{{personal.userName}}">个人中心</a></li>
                    <li class="active">{{personal.userName}}发布过的话题</li>
                </ol>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">最近发布的话题</h3>
                    </div>
                    <div class="panel-body">
                        {{#if ownTopicList}}
                            <ul class="list-group topic-list">
                                {{#each ownTopicList}}
                                    <li class="list-group-item clearfix">
                                        <div class="pull-left">
                                            <a href="/topic/show/{{id}}">
                                                {{title}}
                                            </a>
                                        </div>
                                        <div class="pull-right">
                                            <span class="label label-info">{{pageView}}浏览 {{replyNum}}回复</span>
                                        </div>
                                    </li>
                                {{/each}}
                            </ul>
                            <nav>
                                <ul class="pagination">
                                    <li class="disabled"><a href="#">&laquo;</a></li>
                                    <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                    <li><a href="#">&raquo;</a></li>
                                </ul>
                            </nav>
                        {{else}}
                            <div class="alert alert-warning" role="alert">没有任何话题</div>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">个人信息</h3>
                    </div>
                    <div class="panel-body">
                        <a class="avatar" href="/user/{{personal.userName}}">
                            <img src="/img/photo.gif" width="50" height="50">
                            <strong>{{personal.userName}}</strong>
                        </a>
                        <p class="sign text-center">
                            <a href="javascript:;">
                                {{#if personal.signature}}
                                    {{personal.signature}}
                                {{else}}
                                    这家伙很懒，什么都没有留下
                                {{/if}}
                            </a>
                        </p>
                    </div>
                </div>
                {{> mod-add-topic}}
                {{> mod-introduction}}
            </div>
        </div>
    </div>
</div>